<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TestActivity"

   >




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Titulo del temA"
                android:gravity="center"
                android:textSize="20dp"
                android:id="@+id/txtTitulo"
                android:background="#127109"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="10dp"
                />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp"
            >




            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="--------------------------"
                android:textSize="18dp"
                android:id="@+id/txtP1"/>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="10dp"
                android:id="@+id/radioGroup">

                <RadioButton
                    android:id="@+id/radio_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="One"
                    android:layout_marginBottom="5dp"

                    />

                <RadioButton
                    android:id="@+id/radio_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Two"

                    android:layout_marginBottom="5dp"
                    />

                <RadioButton
                    android:id="@+id/radio_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Three"

                    android:layout_marginBottom="5dp"
                    />

                <RadioButton
                    android:id="@+id/radio_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Four"

                    android:layout_marginBottom="5dp"
                    />

            </RadioGroup>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="#000000"
                android:text="--------------------------"
                android:id="@+id/txtP2"/>


            <RadioGroup

                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="10dp"
                android:id="@+id/radioGroup2">

                <RadioButton
                    android:id="@+id/radio_one2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="One"

                    android:layout_marginBottom="5dp"
                    />

                <RadioButton
                    android:id="@+id/radio_two2"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Two"

                    android:layout_marginBottom="5dp"
                    />

                <RadioButton

                    android:id="@+id/radio_three2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Three"
                    android:layout_marginBottom="5dp"

                    />

                <RadioButton
                    android:id="@+id/radio_four2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Four"

                    android:layout_marginBottom="5dp"
                    />

            </RadioGroup>




            <TextView
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="--------------------------"
                android:textSize="18dp"
                android:id="@+id/txtP3"/>

            <RadioGroup
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="10dp"
                android:id="@+id/radioGroup3">

                <RadioButton
                    android:id="@+id/radio_one3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="One"

                    android:layout_marginBottom="5dp"
                    />

                <RadioButton
                    android:id="@+id/radio_two3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Two"
                    android:layout_marginBottom="5dp"

                    />

                <RadioButton
                    android:id="@+id/radio_three3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Three"

                    android:layout_marginBottom="5dp"
                    />

                <RadioButton
                    android:id="@+id/radio_four3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Four"

                    android:layout_marginBottom="5dp"
                    />

            </RadioGroup>




            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="--------------------------"
                android:textSize="18dp"
                android:id="@+id/txtP4"/>

            <RadioGroup
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="10dp"
                android:id="@+id/radioGroup4">

                <RadioButton
                    android:id="@+id/radio_one4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="One"

                    android:layout_marginBottom="5dp"
                    />

                <RadioButton
                    android:id="@+id/radio_two4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Two"
                    android:layout_marginBottom="5dp"

                    />

                <RadioButton
                    android:id="@+id/radio_three4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Three"

                    android:layout_marginBottom="5dp"
                    />

                <RadioButton
                    android:id="@+id/radio_four4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Four"

                    android:layout_marginBottom="5dp"
                    />

            </RadioGroup>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enviar"
                android:onClick="EnviarTest"
                />

        </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>